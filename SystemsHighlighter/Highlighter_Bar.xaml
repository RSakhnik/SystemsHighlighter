<UserControl x:Class="SystemsHighlighter.Highlighter_Bar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SystemsHighlighter"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SystemsHighlighter.Tools"
             mc:Ignorable="d"
             d:DesignHeight="180"
             d:DesignWidth="300">

    <UserControl.DataContext>
        <vm:SystemsHighlighterControlViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Шаблон дерева -->
        <HierarchicalDataTemplate DataType="{x:Type vm:SystemNodeViewModel}"
                                  ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="12" Height="12"
                         Fill="{Binding NodeBrush}"
                         Stroke="Black" StrokeThickness="1"
                         VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding IsHighlighted, Mode=TwoWay}"
                          Margin="6,0,0,0"
                          VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" />
                </CheckBox>
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Конвертер для видимости -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Padding="8" Background="#FAFAFA" CornerRadius="4">
        <Grid>
            <!-- Сначала авто для заголовка, затем растягиваемая под контент -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                   Text="Systems Highlighter"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center"/>

            <!-- Основной контент -->
            <TabControl Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <!-- Просто выводим сам объект Header -->
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.ItemContainerStyle>

                <TabItem x:Name="Load_Page" Header="Данные">
                    <TabItem.Content>
                        <!-- Ручное управление загрузкой данных -->
                        <GroupBox Header="Загрузка данных"
                                  FontWeight="Bold"
                                  Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <!-- Выбор и добавление части -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ComboBox ItemsSource="{Binding cmbModelPartsToLoadItems}"
                      SelectedItem="{Binding cmbModelPartsToLoadSelected}"
                      Grid.Column="0"
                      VerticalAlignment="Center"
                      Height="22"
                      Margin="0,0,4,0"/>

                                    <Button Content="Добавить"
                    Command="{Binding AddModelPartCommand}"
                    Grid.Column="1"
                    Width="100"
                    VerticalAlignment="Center"
                    FontWeight="Normal"/>
                                </Grid>

                                <!-- Список выбранных частей -->
                                <TextBox Text="{Binding SelectedModelPartsText}" 
                 Height="60" 
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"/>

                                <!-- Кнопка Загрузить -->
                                <Button Content="Загрузить"
                Command="{Binding LoadModelPart}"
                Width="124"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontWeight="Normal"/>

                                <!-- Готовность плагина к использованию-->
                                <TextBlock x:Name="PluginIsReady" Text="{Binding LoadStatus}" Margin="0,0,8,0"/>
                            </StackPanel>

                        </GroupBox>
                    </TabItem.Content>
                </TabItem>

                <TabItem x:Name="Systems_Page" Header="Системы" MouseLeftButtonDown="Systems_Page_MouseLeftButtonDown">
                    <TabItem.Content>
                        <!-- Дерево -->
                        <StackPanel>
                            <!-- Поисковая панель -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,4,0"
                                         VerticalAlignment="Center"
                                         Height="22"/>

                                 <Button Grid.Column="1"
                                        Content="Найти"
                                        Command="{Binding SearchCommand}"
                                        Width="60"
                                        Margin="0,0,4,0"
                                        VerticalAlignment="Center"/>

                                 <Button Grid.Column="2"
                                        Content="Сброс"
                                        Command="{Binding ClearSearchCommand}"
                                        Width="60"
                                        VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="Системы и подсистемы:"
                                        FontWeight="Bold"
                                        Margin="0,0,0,4"/>
                             <ScrollViewer Height="200"
                                           VerticalScrollBarVisibility="Auto"
                                           BorderBrush="#DDD"
                                           BorderThickness="1">
                                <TreeView ItemsSource="{Binding TreeNodes}" />
                            </ScrollViewer>

                            <!-- Массовые кнопки -->
                            <Grid Margin="0,6,0,0" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="4,0"/>
                                        <Setter Property="Width" Value="140"/>
                                    </Style>
                                </Grid.Resources>

                                <!-- Первая строка кнопок -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="Выделить все системы"
                                            Command="{Binding SelectAllTopLevelCommand}" />
                                    <Button Grid.Column="1"
                                            Content="Снять все выделения"
                                            Command="{Binding ClearAllCommand}" />
                                </Grid>

                                <!-- Вторая строка кнопок -->
                                <Grid Grid.Row="1" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="Скрыть невыделенные"
                                            Command="{Binding HideUnhighlightedCommand}" />
                                    <Button Grid.Column="1"
                                            Content="Вернуть видимость"
                                            Command="{Binding RestoreVisibilityCommand}" />
                                </Grid>
                            </Grid>

                            <!-- Итоги -->
                            <StackPanel Margin="0,8,0,0" Background="#FFF">
                                <TextBlock Text="{Binding TotalTonnage, StringFormat='Тоннаж: {0:N2} т'}" FontSize="12" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding TotalLength, StringFormat='Протяженность: {0:N2} м'}" FontSize="12" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding TotalVolume, StringFormat='Объем: {0:N2} м³'}" FontSize="12"/>

                            </StackPanel>

                            <!-- Кнопка Создать отчёт -->
                            <Button Content="Создать отчёт"
                                    Command="{Binding CreateReportSystems}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,12,0,0"
                                    Height="34"/>


                        </StackPanel>
                        

                        
                    </TabItem.Content>
                </TabItem>

                <TabItem x:Name="Monitoring_Page" Header="Мониторинг">
                    <TabItem.Content>
                        <!-- Мониторинг -->
                        <GroupBox Header="Мониторинг и контроль испытаний"
                                  FontWeight="Bold"
                                  Margin="0,16,0,0">
                            <StackPanel Margin="8">

                                <!-- Кнопки для переключения статуса или типа испытаний -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Показать статус"
                    Command="{Binding TP_ShowStatusCommand}"
                    Width="120" Margin="0,0,8,0" FontWeight="Normal"/>
                                    <Button Content="Показать тип" 
                    Command="{Binding TP_ShowTypeCommand}"
                    Width="120" FontWeight="Normal"/>
                                </StackPanel>

                                <!-- Легенда -->
                                <StackPanel Margin="0,8,0,0">
                                    <TextBlock Text="Легенда" FontWeight="Bold"/>
                                    <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl Name="LegendItems"
                              ItemsSource="{Binding TP_Legend}"
                              Background="White"
                              BorderBrush="#DDD"
                              BorderThickness="1">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="4">
                                                        <Ellipse Width="12" Height="12"
                                 Fill="{Binding Brush}"
                                 Stroke="Black" StrokeThickness="1"
                                 VerticalAlignment="Center"/>
                                                        <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                  Margin="6,0,0,0"
                                  VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}" Margin="6,0,0,0"/>
                                                        </CheckBox>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>

                                <!-- Массовые кнопки -->
                                <Grid Margin="0,6,0,0" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="4,0"/>
                                            <Setter Property="Width" Value="140"/>
                                        </Style>
                                    </Grid.Resources>

                                    <!-- Первая строка кнопок -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Выделить все"
                                                Command="{Binding SelectAll_Monitoring}" />
                                        <Button Grid.Column="1"
                                                Content="Снять все выделения"
                                                Command="{Binding ClearAll_Monitoring}" />
                                    </Grid>

                                    <!-- Вторая строка кнопок -->
                                    <Grid Grid.Row="1" Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Скрывать невыделенные"
                                                Command="{Binding HideUnhighlighted_Monitoring}" />
                                        <Button Grid.Column="1"
                                                Content="Вернуть видимость"
                                                Command="{Binding RestoreVisibility_Monitoring}" />
                                    </Grid>
                                </Grid>

                                <!-- Физические объёмы -->
                                <StackPanel Margin="0,8,0,0" Background="#FFF">
                                    <TextBlock FontWeight="Regular" Text="{Binding TP_TotalTonnage, StringFormat='Тоннаж: {0:N2} т'}" Margin="0,0,16,0"/>
                                    <TextBlock FontWeight="Regular" Text="{Binding TP_TotalLength, StringFormat='Протяженность: {0:N2} м'}" Margin="0,0,16,0"/>
                                    <TextBlock FontWeight="Regular" Text="{Binding TP_TotalWeld, StringFormat= 'Сварной шов: {0:N2} inch'}" Margin="0,0,16,0"/>
                                </StackPanel>

                                <!-- Выбор события -->
                                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,8,0,0">
                                    <TextBlock Text="Событие:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox Width="200"
                      ItemsSource="{Binding DateFieldOptions}"
                      SelectedItem="{Binding SelectedDateField}" />
                                </StackPanel>

                                <!-- Слайдер -->
                                <Grid Margin="0,8,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- строка с датой -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- строка со слайдером -->
                                    </Grid.RowDefinitions>

                                    <!-- Текущая дата справа -->
                                    <DockPanel Grid.Row="0" Margin="0,0,0,4">
                                        <TextBlock Text="Дата:" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding SelectedDate, StringFormat=d}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Margin="6,0,0,0"/>
                                    </DockPanel>

                                    <!-- Слайдер -->
                                    <local:CustomSlider Grid.Row="1"
                                Minimum="{Binding MinDateTicks}"
                                Maximum="{Binding MaxDateTicks}"
                                Value="{Binding SelectedBucketIndex, Mode=TwoWay}"
                                TickFrequency="{Binding TickStep}"
                                TickPlacement="None"
                                IsSnapToTickEnabled="True"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Кнопка Создать отчёт(мониторинг) -->
                                <Button Content="Создать отчёт"
                Command="{Binding CreateReportMonitoring}"
                HorizontalAlignment="Stretch"
                Margin="0,12,0,0"
                Height="34"
                FontWeight="Normal"/>

                            </StackPanel>


                        </GroupBox>
                    </TabItem.Content>
                </TabItem>

                <TabItem x:Name="Passport_Page" Header="Паспорта">
                    <TabItem.Content>
                        

                        <!-- Паспортизация трубопроводов -->
                        <GroupBox Header="Паспортизация трубопроводов"
                                  FontWeight="Bold"
                                  Margin="0,16,0,0">

                            <StackPanel Margin="8">
                                <!-- Легенда -->
                                <StackPanel Margin="0,8,0,0">
                                    <TextBlock Text="Легенда" FontWeight="Bold"/>
                                    <ScrollViewer Height="160" VerticalScrollBarVisibility="Auto">
                                        <TreeView ItemsSource="{Binding PP_LegendTree}">
                                            <TreeView.Resources>

                                                <!-- Родитель: Паспорт -->
                                                <HierarchicalDataTemplate DataType="{x:Type vm:PP_PassportLegendNode}"
                                                                            ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal" Margin="4">
                                                        <!-- Кружок цвета родителя -->
                                                        <Ellipse Width="12" Height="12"
                                                                 Fill="{Binding Brush}"
                                                                 Stroke="Black" StrokeThickness="1"
                                                                 VerticalAlignment="Center"/>

                                                        <!-- Обычный чекбокс (только вкл/выкл) -->
                                                        <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                                  Margin="6,0,0,0"
                                                                  VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}" />
                                                        </CheckBox>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>


                                                <!-- Дочерний узел: Секция -->
                                                <DataTemplate DataType="{x:Type vm:PP_LegendItem}">
                                                    <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                                                        <Ellipse Width="12" Height="12"
Fill="{Binding Brush}"
Stroke="Black" StrokeThickness="1"
VerticalAlignment="Center"/>
                                                        <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay}"
 Margin="6,0,0,0"
 VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}" Margin="6,0,0,0"/>
                                                        </CheckBox>
                                                    </StackPanel>
                                                </DataTemplate>

                                            </TreeView.Resources>
                                        </TreeView>
                                    </ScrollViewer>
                                </StackPanel>

                                <!-- Массовые кнопки -->
                                <Grid Margin="0,6,0,0" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="4,0"/>
                                            <Setter Property="Width" Value="140"/>
                                        </Style>
                                    </Grid.Resources>

                                    <!-- Первая строка кнопок -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Выделить все"
                                                Command="{Binding SelectAll_Passports}" />
                                        <Button Grid.Column="1"
                                                Content="Снять все выделения"
                                                Command="{Binding ClearAll_Passports}" />
                                    </Grid>

                                    <!-- Вторая строка кнопок -->
                                    <Grid Grid.Row="1" Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Скрывать невыделенные"
                                                Command="{Binding HideUnhighlighted_Passports}" />
                                        <Button Grid.Column="1"
                                                Content="Вернуть видимость"
                                                Command="{Binding RestoreVisibility_Passsports}" />
                                    </Grid>
                                </Grid>

                                <!-- Физические объёмы -->
                                <StackPanel Margin="0,8,0,0" Background="#FFF">
                                    <TextBlock FontWeight="Regular" Text="{Binding PP_TotalTonnage, StringFormat='Тоннаж: {0:N2} т'}" Margin="0,0,16,0"/>
                                    <TextBlock FontWeight="Regular" Text="{Binding PP_TotalLength, StringFormat='Протяженность: {0:N2} м'}" Margin="0,0,16,0"/>
                                    <TextBlock FontWeight="Regular" Text="{Binding PP_TotalWeld, StringFormat= 'Сварной шов: {0:N2} inch'}" Margin="0,0,16,0"/>
                                </StackPanel>

                                <!-- Кнопка Создать отчёт(мониторинг) -->
                                <Button Content="Создать отчёт"
                                        Command="{Binding CreateReportPassports}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,12,0,0"
                                        Height="34"
                                        FontWeight="Normal"/>

                            </StackPanel>


                        </GroupBox>
                    </TabItem.Content>
                </TabItem>

                <TabItem x:Name="SubsystemsStatus_Page" Header="Статус подсистем">
                    <TabItem.Content>
                        <GroupBox Header="Статусы подсистем"
                  FontWeight="Bold"
                  Margin="0,16,0,0">
                            <StackPanel Margin="8">

                                <!-- Поиск по дереву (использует общий ApplyFilter) -->
                                <!--
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                             Text="{Binding SubsystemsSearchText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,4,0"
                             Height="22"
                             VerticalAlignment="Center"/>

                                    <Button Grid.Column="1"
                            Content="Найти"
                            Command="{Binding SubsystemsSearchCommand}"
                            Width="70"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                            Content="Сброс"
                            Command="{Binding ClearSubsystemsSearchCommand}"
                            Width="70"
                            VerticalAlignment="Center"/>
                                </Grid>
                                -->
                                
                                <!-- Режимы покраски -->
                                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8">
                                    <Button Content="Готовность по сварке"
                            Command="{Binding ShowSubsystemsWeldingCommand}"
                            Margin="4,0"/>
                                    <Button Content="Средняя готовность НК"
                            Command="{Binding ShowSubsystemsNdtCommand}"
                            Margin="4,0"/>
                                    <Button Content="Испытания завершены"
                                            Command="{Binding ShowSubsystemsTestsCommand}"
                                            Margin="4,0"/>
                                                </StackPanel>

                                <!-- Легенда: Подсистема → Линии с цветными кружками и чекбоксами -->
                                <Border BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Margin="0,0,0,8">
                                    <ScrollViewer Height="180"
                                  VerticalScrollBarVisibility="Auto">
                                        <TreeView ItemsSource="{Binding SubsystemsLegendTree}">
                                            <TreeView.Resources>

                                                <!-- Родитель: Подсистема -->
                                                <HierarchicalDataTemplate DataType="{x:Type vm:SubsystemLegendNode}"
                                                          ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal" Margin="4">
                                                        <!-- Кружок цвета подсистемы -->
                                                        <Ellipse Width="12" Height="12"
                                                 Fill="{Binding Brush}"
                                                 Stroke="Black" StrokeThickness="1"
                                                 VerticalAlignment="Center"/>

                                                        <!-- Чекбокс on/off подсистемы -->
                                                        <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                  Margin="6,0,0,0"
                                                  VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}" />
                                                        </CheckBox>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>

                                                <!-- Дочерний узел: Линия -->
                                                <DataTemplate DataType="{x:Type vm:SubsystemLegendItem}">
                                                    <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                                                        <Ellipse Width="12" Height="12"
                                                 Fill="{Binding Brush}"
                                                 Stroke="Black" StrokeThickness="1"
                                                 VerticalAlignment="Center"/>
                                                        <!-- Чекбокс видимости линии -->
                                                        <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                                  Margin="6,0,0,0"
                                                  VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}" Margin="6,0,0,0"/>
                                                        </CheckBox>
                                                    </StackPanel>
                                                </DataTemplate>

                                            </TreeView.Resources>
                                        </TreeView>
                                    </ScrollViewer>
                                </Border>

                                <!-- Кнопки видимости / чекбоксов -->
                                <!-- Кнопки видимости / чекбоксов -->
                                <Grid Margin="0,4,0,0"
      HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Первая строка -->
                                    <Button Grid.Row="0" Grid.Column="0"
            Content="Скрыть невыделенные"
            Command="{Binding HideUnhighlightedSubsystemsCommand}"
            Margin="4,0"/>

                                    <Button Grid.Row="0" Grid.Column="1"
            Content="Вернуть видимость"
            Command="{Binding RestoreVisibilitySubsystemsCommand}"
            Margin="4,0"/>

                                    <!-- Вторая строка -->
                                    <Button Grid.Row="1" Grid.Column="0"
            Content="Выделить все"
            Command="{Binding ActivateAllSubsystemsCommand}"
            Margin="4,4,4,0"/>

                                    <Button Grid.Row="1" Grid.Column="1"
            Content="Снять все выделения"
            Command="{Binding DeactivateAllSubsystemsCommand}"
            Margin="4,4,4,0"/>
                                </Grid>


                                <!-- Кнопка отчёта -->
                                <Button Content="Создать отчёт"
                        Command="{Binding CreateReportSubsystemsStatus}"
                        HorizontalAlignment="Stretch"
                        Margin="0,12,0,0"
                        Height="34"
                        FontWeight="Normal"/>

                                <!-- Цветовая шкала готовности (0% → 50% → 100%) -->
                                <StackPanel Margin="10,10,10,10">
                                    <TextBlock Text="Шкала готовности" FontWeight="Bold" Margin="0,0,0,4"/>

                                    <!-- Сам градиент -->
                                    <Border Height="14"
                                            CornerRadius="3"
                                            BorderBrush="#888"
                                            BorderThickness="1">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <!-- 0% -->
                                                <GradientStop Color="#E53935" Offset="0.0"/>
                                                <!-- 50% -->
                                                <GradientStop Color="#FDD835" Offset="0.5"/>
                                                <!-- 100% -->
                                                <GradientStop Color="#43A047" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Подписи снизу -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="0%"
                                                   HorizontalAlignment="Left"
                                                   FontSize="11"
                                                   Foreground="#444"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="50%"
                                                   HorizontalAlignment="Center"
                                                   FontSize="11"
                                                   Foreground="#444"/>

                                        <TextBlock Grid.Column="2"
                                                   Text="100%"
                                                   HorizontalAlignment="Right"
